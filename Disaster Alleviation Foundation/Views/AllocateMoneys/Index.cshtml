@model IEnumerable<Disaster_Alleviation_Foundation.Models.AllocateMoney>

@{
    ViewData["Title"] = "Allocate Monetary Donation";
}

<style>
    /* Define styles for sections */
    .table-section {
        margin-bottom: 40px;
    }

    .description-section {
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .description-section h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .description-section p {
            font-size: 16px;
            line-height: 1.6;
            color: #333;
            margin-bottom: 10px;
        }
</style>

<h1>Allocate Monetary Donation</h1>

<!-- Table Section -->
<section class="table-section">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DonationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisaterType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisasterId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisaterType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisasterId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UserName">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.UserName">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.UserName">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

<!-- Description Section -->
<section class="description-section">
    <h2>Funds Distribution During Natural Disasters</h2>
    <p>
        Description of how funds are allocated and distributed during a natural disaster event.
    </p>
    <p>
        <strong>Emergency Relief:</strong> Immediate funds are used for emergency supplies, medical aid, and shelter.
    </p>
    <p>
        <strong>Reconstruction Efforts:</strong> Long-term funds go into rebuilding infrastructure, homes, and communities.
    </p>
    <p>
        <strong>Community Support:</strong> Financial assistance is directed towards supporting affected communities in their recovery.
    </p>
    <!-- Add more descriptions related to fund allocation -->
</section>
