        section h2 {
            font-size: 28px;
            margin-bottom: 15px;
            color: #333;
            border-bottom: 1px solid #ccc;
            padding-bottom: 10px;
        }

        /* Style for section content */
        section div {
            font-size: 16px;
            line-height: 1.6;
            color: #555;
        }

        /* Style for list items */
        section ul {
            list-style-type: none;
            padding-left: 0;
        }

            section ul li {
                margin-bottom: 5px;
            }
</style>
