@model IEnumerable<Disaster_Alleviation_Foundation.Models.MonetaryDonation>

@{
    ViewData["Title"] = "Capture New Monetary Donations";
}

<style>
    /* Define styles for sections */
    .table-section {
        margin-bottom: 40px;
    }

    .description-section {
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .description-section h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .description-section p {
            font-size: 16px;
            line-height: 1.6;
            color: #333;
            margin-bottom: 10px;
        }
</style>

<h1>Capture New Monetary Donations</h1>

<!-- Table Section -->
<section class="table-section">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DonationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UserName">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.UserName">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.UserName">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

<!-- Description Section -->
<section class="description-section">
    <h2>Importance of Monetary Donations During Natural Disasters</h2>
    <p>
        Explaining the significance of monetary donations during natural disasters and why people are encouraged to donate.
    </p>
    <p>
        <strong>Immediate Assistance:</strong> Monetary donations enable immediate response and aid delivery to affected areas.
    </p>
    <p>
        <strong>Flexibility and Adaptability:</strong> Monetary contributions provide flexibility in addressing evolving needs during disasters.
    </p>
    <p>
        <strong>Long-Term Recovery:</strong> Financial support aids in long-term recovery efforts, rebuilding communities and infrastructure.
    </p>
    <!-- Add more descriptions about the importance of monetary donations -->
</section>
