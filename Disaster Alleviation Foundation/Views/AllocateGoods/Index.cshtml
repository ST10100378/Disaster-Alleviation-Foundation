@model IEnumerable<Disaster_Alleviation_Foundation.Models.AllocateGood>

@{
    ViewData["Title"] = "Allocate Goods Donation";
}

<style>
    /* Define styles for sections */
    .table-section {
        margin-bottom: 40px;
    }

    .description-section {
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .description-section h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .description-section p {
            font-size: 16px;
            line-height: 1.6;
            color: #333;
            margin-bottom: 10px;
        }
</style>

<h1>Allocate Goods Donation</h1>

<!-- Table Section -->
<section class="table-section">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisasterType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DisasterId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisasterType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisasterId)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UserName">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.UserName">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.UserName">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

<!-- Description Section -->
<section class="description-section">
    <h2>Goods Distribution During Natural Disasters</h2>
    <p>
        Description of how goods are allocated and distributed during a natural disaster event.
    </p>
    <p>
        <strong>Immediate Response:</strong> Emergency supplies such as food, water, and medical aid are dispatched to affected areas.
    </p>
    <p>
        <strong>Coordinated Efforts:</strong> Various organizations collaborate to efficiently distribute donated goods based on needs assessment.
    </p>
    <p>
        <strong>Local Assistance:</strong> Working with local authorities to ensure goods reach the most affected and vulnerable communities.
    </p>
    <!-- Add more descriptions related to goods allocation -->
</section>
