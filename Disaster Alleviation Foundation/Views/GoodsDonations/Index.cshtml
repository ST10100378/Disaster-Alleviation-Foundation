@model IEnumerable<Disaster_Alleviation_Foundation.Models.GoodsDonation>

@{
    ViewData["Title"] = "Capture New Goods Donations";
}

<style>
    /* Define styles for sections */
    .table-section {
        margin-bottom: 40px;
    }

    .description-section {
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

        .description-section h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .description-section p {
            font-size: 16px;
            line-height: 1.6;
            color: #333;
            margin-bottom: 10px;
        }
</style>

<h1>Capture New Goods Donations</h1>

<!-- Table Section -->
<section class="table-section">
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Name">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Name">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Name">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>

<!-- Description Section -->
<section class="description-section">
    <h2>Importance of Donating Goods During Natural Disasters</h2>
    <p>
        Explaining the importance of donating goods during natural disasters and why people are encouraged to donate.
    </p>
    <p>
        <strong>Immediate Necessities:</strong> Donated goods provide essential items such as food, water, and clothing to those affected.
    </p>
    <p>
        <strong>Supporting Communities:</strong> Donations assist in supporting and rebuilding communities affected by disasters.
    </p>
    <p>
        <strong>Providing Comfort:</strong> Donated goods offer comfort and basic needs during challenging times for affected individuals.
    </p>
    <!-- Add more descriptions about the importance of donating goods -->
</section>
